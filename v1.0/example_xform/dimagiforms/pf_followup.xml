		<instance>
  	      <pf_followup xmlns="http://dev.commcarehq.org/Pathfinder/pathfinder_cc_followup" xmlns:jrm="http://dev.commcarehq.org/jr/xforms" version="3" uiVersion="1">
			<Meta>
				<DeviceID />
				<TimeStart />
				<TimeEnd />
				<username />
				<chw_id/>
				<uid/>
			</Meta>
			
			<case>
			  <case_id />
			  <date_modified />
			  <close />
			  <referral>
    			<referral_id/>
        		<followup_date/>
        		<open>
            	  <referral_types/>
        		</open>
    		  </referral> 
			</case>
			
			<patient>
			  <type_of_client/>
              <date_of_visit/>
			  <client_condition/>
			  <social_medical_problems/>
			  <medication_given/>
			  <services_given/>
			  <referrals_hiv/>
			  <ctc/>
			  <reg_followup_hiv/>
			  <remarks/>
			</patient>
		  </pf_followup>
		</instance>

		<bind nodeset="case/case_id" jr:preload="case" jr:preloadParams="case-id" />
		<bind nodeset="case/date_modified" type="dateTime" jr:preload="timestamp" jr:preloadParams="end" />
		<bind nodeset="case/close" relevant="/pf_followup/patient/reg_followup_hiv != 'new' and
		                                     /pf_followup/patient/reg_followup_hiv != 'continuing'" />
		<bind nodeset="case/referral" relevant="count-selected(/pf_followup/patient/referrals_hiv) > 0"/>
		<bind nodeset="case/referral/referral_id" jr:preload="uid" jr:preloadParams="general"/>
		<bind nodeset="case/referral/followup_date" type="date" calculate="date(today() + 2)"/>
		<bind nodeset="case/referral/open/referral_types" calculate="/pf_followup/patient/referrals_hiv"/>

	  <bind nodeset="Meta/DeviceID" jr:preload="property" jr:preloadParams="DeviceID" />
      <bind nodeset="Meta/username" jr:preload="meta" jr:preloadParams="UserName" />
      <bind nodeset="Meta/chw_id" jr:preload="meta" jr:preloadParams="UserID" />
      <bind nodeset="Meta/TimeStart" type="dateTime" jr:preload="timestamp" jr:preloadParams="start" />
      <bind nodeset="Meta/TimeEnd" type="dateTime" jr:preload="timestamp" jr:preloadParams="end" />
	  <bind nodeset="Meta/uid" type="xsd:string" jr:preload="uid" jr:preloadParams="general" />
	     
	    <bind id="type_of_client" nodeset="/pf_followup/patient/type_of_client" type="xsd:string" required="true()" />  
        <bind id="date_of_visit" nodeset="/pf_followup/patient/date_of_visit" type="xsd:date" required = "true()"required = "true()"constraint=" .&lt;= today()" jr:constraintMsg="Haiwezekani mgonjwa kutembelewa mbele ya leo"/>
		<bind id="client_condition" nodeset="/pf_followup/patient/client_condition" type="xsd:string" required="true()" />
		<bind id="social_medical_problems" nodeset="/pf_followup/patient/social_medical_problems" type="xsd:string" required="true()" />
		<bind id="medication_given" nodeset="/pf_followup/patient/medication_given" type="xsd:string" required="true()" />
		<bind id="services_given" nodeset="/pf_followup/patient/services_given" type="xsd:string"/>
		<bind id="referrals_hiv" nodeset="/pf_followup/patient/referrals_hiv" type="xsd:string" />
		<bind id="ctc" nodeset="/pf_followup/patient/ctc" type="xsd:string" required="true()" />
		<bind id="reg_followup_hiv" nodeset="/pf_followup/patient/reg_followup_hiv" type="xsd:string" required="true()" />
		<bind id="remarks" nodeset="/pf_followup/patient/remarks" type="xsd:string" required="true()" />

		</model>
	</h:head>
