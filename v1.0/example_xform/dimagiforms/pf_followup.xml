		<label ref="jr:itext('ctc')"></label>
		<item><label ref="jr:itext('registered_no_arvs')"></label><value>reg_no_arvs</value></item>
		<item><label ref="jr:itext('registered_and_arvs')"></label><value>reg_and_arvs</value></item>
        <item><label ref="jr:itext('not_registered')"></label><value>not_registered</value></item>
	    </select1>
        <select1 ref="/pf_followup/patient/reg_followup_hiv">
		<label ref="jr:itext('reg_followup_hiv')"></label>
		<item><label ref="jr:itext('new')"></label><value>new</value></item>
