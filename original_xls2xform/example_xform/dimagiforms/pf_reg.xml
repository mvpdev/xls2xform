              <instance>
			    <pathfinder_registration xmlns="http://dev.commcarehq.org/Pathfinder/pathfinder_cc_reg" xmlns:jrm="http://dev.commcarehq.org/jr/xforms" version="2" uiVersion="1">
			      <Meta>
			        <DeviceID />
			        <TimeStart />
			        <TimeEnd />
		     	    <username />
			        <chw_id />
			        <uid />
			      </Meta>
			      
			      <case>
			      	<case_id />
			      	<date_modified />
			      	<create>
			      		<case_type_id>cc_pf_client</case_type_id>
			      		<user_id />
			      		<case_name />
			      		<external_id />
			      	</create>
			      	<update>
			      	  <pat_inits />
			      	  <sex />
			      	  <dob />
			      	  <village />
			      	</update>
			      </case>
			      
			      <patient>
			        <patient_id />
			        <patient_initials />
			        <date_of_birth/>
			        <sex />
			        <village />
			        <date_of_registration/>
			        <registration_cause/>
			        <hiv_status_during_registration />
			        <hiv_status_after_test/>
			        <number_given_at_ctc/>
                  </patient>
		        </pathfinder_registration>
		      </instance>


		<bind nodeset="case/case_id" jr:preload="uid" jr:preloadParams="general"/>
		<bind nodeset="case/date_modified" type="dateTime" jr:preload="timestamp" jr:preloadParams="end"/>
		<bind nodeset="case/create/user_id" type="xsd:string" jr:preload="meta" jr:preloadParams="UserID" />
		<bind nodeset="case/create/case_name" calculate="concat(/pathfinder_registration/patient/patient_initials, '-', /pathfinder_registration/patient/village)" />
		<bind nodeset="case/create/external_id" type="string" calculate="string(/pathfinder_registration/patient/patient_id)" />
		<bind nodeset="case/update/pat_inits" calculate="/pathfinder_registration/patient/patient_initials" />
		<bind nodeset="case/update/dob" calculate="/pathfinder_registration/patient/date_of_birth" />
		<bind nodeset="case/update/sex" calculate="/pathfinder_registration/patient/sex" />
		<bind nodeset="case/update/village" calculate="/pathfinder_registration/patient/village" />

		<bind id="hidden1" nodeset="/pathfinder_registration/Meta/DeviceID" type="xsd:string" jr:preload="property" jr:preloadParams="DeviceID" />
		<bind id="hidden2" nodeset="/pathfinder_registration/Meta/TimeStart" type="xsd:dateTime" jr:preload="timestamp" jr:preloadParams="start" />
		<bind id="hidden3" nodeset="/pathfinder_registration/Meta/TimeEnd" type="xsd:dateTime" jr:preload="timestamp" jr:preloadParams="end" />
		<bind id="hidden4" nodeset="/pathfinder_registration/Meta/username" type="xsd:string" jr:preload="meta" jr:preloadParams="UserName" />
		<bind id="hidden5" nodeset="/pathfinder_registration/Meta/chw_id" type="xsd:string" jr:preload="meta" jr:preloadParams="UserID" />
		<bind id="hidden6" nodeset="/pathfinder_registration/Meta/uid" type="xsd:string" jr:preload="uid" jr:preloadParams="general" />
		
		<bind id="patient_id" nodeset="/pathfinder_registration/patient/patient_id" type="xsd:string" required="true()" />
		<bind id="patient_initials" nodeset="/pathfinder_registration/patient/patient_initials" type="xsd:string" required="true()" />
		<bind id="village" nodeset="/pathfinder_registration/patient/village" type="xsd:string" required="true()" />
		<bind id="date_of_registration" nodeset="/pathfinder_registration/patient/date_of_registration" type="xsd:date" required = "true()"required = "true()"constraint=" .&lt;= today()" jr:constraintMsg="Haiwezekani mgonjwa awe amesajiliwa mbele ya leo"/>
        <bind id="registration_cause" nodeset="/pathfinder_registration/patient/registration_cause" type="xsd:string" required="true()"/>
        <bind id="hiv_status_during_registration" nodeset="/pathfinder_registration/patient/hiv_status_during_registration" type="xsd:string"  required="true()" />
		<bind id="hiv_status_after_registration" nodeset="/pathfinder_registration/patient/hiv_status_after_test" type="xsd:string" required = "true()" />
		<bind id="number_given_at_ctc" nodeset="/pathfinder_registration/patient/number_given_at_ctc" type="xsd:int"/>
		<bind id="date_of_birth" nodeset="/pathfinder_registration/patient/date_of_birth" type="xsd:date" required = "true()" constraint=" .&lt; today()" jr:constraintMsg="Haiwezakani mgonjwa awe amezaliwa leo"/>
        <bind id="sex" nodeset="/pathfinder_registration/patient/sex" type="xsd:string" required = "true()" />
		
	    </model>

        </h:head>			

        <h:body>
             
		<input bind="patient_id"><label ref="jr:itext('patient_id')"></label></input>
		<input bind="patient_initials"><label ref="jr:itext('patient_initials')"></label></input>
	    <input bind="date_of_birth"><label ref="jr:itext('date_of_birth')"></label></input>
	    <select1 ref="/pathfinder_registration/patient/sex">
		<label ref="jr:itext('sex')"></label>
		<item><label ref="jr:itext('male')"></label><value>m</value></item>
		<item><label ref="jr:itext('female')"></label><value>f</value></item>
	    </select1>
	    <input bind="village"><label ref="jr:itext('village')"></label></input>
	    <input bind="date_of_registration"><label ref="jr:itext('date_of_registration')"></label></input>
		<select ref="/pathfinder_registration/patient/registration_cause">
		<label ref="jr:itext('registration_cause')"></label>
		<item><label ref="jr:itext('hiv')"></label><value>hiv</value></item>
		<item><label ref="jr:itext('sickle_cell')"></label><value>sickle_cell</value></item>
        <item><label ref="jr:itext('heart')"></label><value>heart</value></item>
		<item><label ref="jr:itext('diabetes')"></label><value>diabetes</value></item>
		<item><label ref="jr:itext('mental')"></label><value>mental</value></item>
        <item><label ref="jr:itext('cancer')"></label><value>cancer</value></item>
		<item><label ref="jr:itext('tb')"></label><value>tb</value></item>
        <item><label ref="jr:itext('others')"></label><value>others</value></item>
	    </select>
	    <select1 ref="/pathfinder_registration/patient/hiv_status_during_registration">
		<label ref="jr:itext('hiv_status_during_registration')"></label>
		<item><label ref="jr:itext('positive')"></label><value>Positive</value></item>
		<item><label ref="jr:itext('negative')"></label><value>Negative</value></item>
        <item><label ref="jr:itext('not_sure')"></label><value>Not_sure</value></item>
        
	    </select1>
	    <select1 ref="/pathfinder_registration/patient/hiv_status_after_test">
		<label ref="jr:itext('hiv_status_after_test')"></label>
		<item><label ref="jr:itext('positive')"></label><value>Positive</value></item>
		<item><label ref="jr:itext('negative')"></label><value>Negative</value></item>
        <item><label ref="jr:itext('not_sure')"></label><value>Not_sure</value></item>
        <item><label ref="jr:itext('tested_before_hbc')"></label><value>Tested_before_hbc</value></item>
	    </select1>
	    <input bind="number_given_at_ctc"><label ref="jr:itext('number_given_at_ctc')"></label></input>
	    
        </h:body>
        </h:html>
